<?xml version="1.0" encoding="GBK"?>

<!-- Log4j 2.x config -->
<Configuration status="OFF">
    <properties>
        <property name="LOG_HOME">${sys:logging.path}/serialize</property>
        <Property name="LOG_LEVEL">${sys:com.alipay.sofa.hessian.log.level}</Property>
        <Property name="LOG_ENCODE">${sys:com.alipay.sofa.hessian.log.encode}</Property>
    </properties>

    <!-- appenders -->
    <Appenders>
        <RollingRandomAccessFile name="JDKSerializeAppender"
                                 immediateFlush="false"
                                 fileName="${LOG_HOME}/jdk.log"
                                 append="true"
                                 filePattern="${LOG_HOME}/jdk.log.%d{yyyy-MM-dd}">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="${LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout charset="${LOG_ENCODE}">
                <pattern>%d %-5p [%C{1}#%L] [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="HessianSerializeAppender"
                                 immediateFlush="false"
                                 fileName="${LOG_HOME}/hessian.log"
                                 append="true"
                                 filePattern="${LOG_HOME}/hessian.log.%d{yyyy-MM-dd}">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="${LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout charset="${LOG_ENCODE}">
                <pattern>%d %-5p [%C{1}#%L] [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <!-- loggers -->
    <Loggers>
        <AsyncLogger name="JDKSerializeLog" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="JDKSerializeAppender"/>
        </AsyncLogger>
        <AsyncLogger name="HessianSerializeLog" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="HessianSerializeAppender"/>
        </AsyncLogger>
    </Loggers>
</Configuration>